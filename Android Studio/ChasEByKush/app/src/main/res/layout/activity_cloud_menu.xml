<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agriphoto2"
    tools:context=".CloudMenu">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem/solution Listing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="Send Datas" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Datas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:text="Get Suggestions" />

    <Button
        android:id="@+id/button9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"


        android:text="Set Suggestions" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:text="Logout"
        android:background="@color/cardview_shadow_start_color"/>

    <EditText
        android:id="@+id/editt"

        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:width="300dp"
        android:background="@color/cardview_dark_background"
        android:hint="Crop/Problem/chat"
        android:inputType="text"
        android:maxEms="18" />


    <EditText
        android:id="@+id/editc"

        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:width="300dp"
        android:background="@color/cardview_dark_background"
        android:hint="Condition"
        android:inputType="text"
        android:maxEms="18" />

    <EditText
        android:id="@+id/edits"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="250dp"
        android:width="350dp"
        android:background="@color/cardview_dark_background"
        android:hint="Suggestion"
        android:inputType="text"
        android:maxEms="18" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="match_parent"
        android:layout_height="172dp"

        android:fillViewport="true"
        android:scrollbars="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="10dp"
            android:background="@color/cardview_dark_background"
            android:text="ChasE Cloud InterFace" />


    </ScrollView>



</RelativeLayout>